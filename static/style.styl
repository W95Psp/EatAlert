body
	font-family "Open Sans"
	padding 0
	margin 0
	background-color #ecf0f1
	h1
		background-color #16a085
		color white
		box-shadow 0px 0px 4px #666
		padding 10px
		margin 0
		height 44px
		text-align center
		img
			height 100%
		span
			display inline-block
			position relative
			top -8px
			padding-left 5px
			padding-right 8px
	#content
		margin-top 20px
		margin-bottom 20px
		text-align center
		.user
			width 120px
			height 120px
			margin 9px
			border 6px solid #CCC
			overflow hidden
			position relative
			background-repeat no-repeat
			background-size cover
			display inline-block
			transition opacity 100ms linear
			&[state='waiting']
				opacity 0.6
			&[state='asking']
				border-color #f1c40f
				transition border-color 100ms linear
			&[state='asking-red']
				border-color orange
				transition border-color 100ms linear
			&[state='ok']
				border-color green
				transition border-color 100ms linear
			img
				marges = 50px
				margin (marges/2)
				width (120px - marges)
				height (120px - marges)
				opacity 0.8
	#call
		margin-top 20px
		display block
		margin auto
		width 70%
		background-color #16a085
		color white
		padding 10px
		font-size 32px
		box-shadow 0px 0px 4px #666
		text-align center
		img
			height 32px
			padding-right 8px
			position relative
			top 2px
		&[state='calling']
			background-color #999
			opacity 0.8